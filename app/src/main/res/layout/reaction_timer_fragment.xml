<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5edf74"
    android:id="@+id/reactionTimerRoot">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tap to begin \n Tap Again Once The Screen Turns Red"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/reactionTimerTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLICK"
        android:id="@+id/reactionTimerAlert"
        android:layout_below="@+id/reactionTimerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:visibility="invisible"
        />


</RelativeLayout>